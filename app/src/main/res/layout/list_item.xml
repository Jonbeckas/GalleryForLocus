<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="Sample text for design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text" android:layout_weight="1"
            android:textAlignment="textStart" android:layout_marginTop="6dp" android:layout_marginBottom="6dp"
            android:layout_marginStart="6dp" android:textSize="14sp"/>
    <Button
            android:layout_width="30dp"
            android:layout_height="30dp" android:id="@+id/delete" android:layout_weight="0"
            android:background="@drawable/ic_baseline_close_24" android:layout_gravity="center"
            android:layout_marginEnd="6dp"/>
</LinearLayout>
